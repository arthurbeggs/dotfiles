configuration {
	width: 40;
	lines: 10;
	font: "Source Code Pro Medium 9";
	bw: 0;
	location: 2;
	fixed-num-lines: false;

	terminal: "termite";
	run-command: "{cmd}";
	run-shell-command: "{terminal} --class="termite-float" -e "bash -i -c '{cmd}; read -n 1 -s'"";

	scroll-method: 1;
	kb-accept-custom: "";
	kb-accept-alt: "Control+Return,Shift+Return";
	theme: "/usr/share/rofi/themes/gruvbox-dark.rasi";
}
