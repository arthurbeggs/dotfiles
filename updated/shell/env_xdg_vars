###########################################
#           XDG Base Directories          #
###########################################
export XDG_CONFIG_HOME=$HOME/.config
export XDG_CACHE_HOME=$HOME/.cache
export XDG_DATA_HOME=$HOME/.local/share

export XDG_CONFIG_DIRS=/etc/xdg
export XDG_DATA_DIRS=/usr/local/share:/usr/share


###########################################
#           XDG User Directories          #
###########################################
export XDG_DESKTOP_DIR="$HOME/desktop"
export XDG_DOWNLOAD_DIR="$HOME/downloads"
export XDG_TEMPLATES_DIR="$HOME/documents/templates"
export XDG_PUBLICSHARE_DIR="$HOME/public"
export XDG_DOCUMENTS_DIR="$HOME/documents"
export XDG_MUSIC_DIR="$HOME/documents/music"
export XDG_PICTURES_DIR="$HOME/documents/images"
export XDG_VIDEOS_DIR="$HOME/documents/videos"


###########################################
#               Applications              #
###########################################

# ack
# export ACKRC="$XDG_CONFIG_HOME"/ack/ackrc

# Android SDK
export ANDROID_HOME="$XDG_DATA_HOME"/android-sdk

# aspell
# TODO

# bash
export HISTFILE="$XDG_DATA_HOME"/bash/history

# bash completion
export BASH_COMPLETION_USER_FILE="$XDG_CONFIG_HOME"/bash-completion/bash_completion

# .NET
export DOTNET_CLI_TELEMETRY_OPTOUT=1

# Ruby Bundler
export BUNDLE_USER_CONFIG="$XDG_CONFIG_HOME"/bundle
export BUNDLE_USER_CACHE="$XDG_CACHE_HOME"/bundle
export BUNDLE_USER_PLUGIN="$XDG_DATA_HOME"/bundle

# Rust Cargo
export CARGO_HOME="$XDG_DATA_HOME"/cargo

# Docker
export DOCKER_CONFIG="$XDG_CONFIG_HOME"/docker
export MACHINE_STORAGE_PATH="$XDG_DATA_HOME"/docker-machine

# go
export GOPATH="$XDG_DATA_HOME"/go

# GTK2
export GTK_RC_FILES="$XDG_CONFIG_HOME"/gtk-2.0/gtkrc

# irb
export IRBRC="$XDG_CONFIG_HOME"/irb/irbrc

# OpenJDK
export _JAVA_OPTIONS=-Djava.util.prefs.userRoot="$XDG_CONFIG_HOME"/java

# less
export LESSKEY="$XDG_CONFIG_HOME"/less/lesskey
export LESSHISTFILE="$XDG_CACHE_HOME"/less/history

# ncurses
export TERMINFO="$XDG_DATA_HOME"/terminfo
export TERMINFO_DIRS="$XDG_CONFIG_HOME"/terminfo:/usr/share/terminfo

# node
export NODE_REPL_HISTORY="$XDG_DATA_HOME"/node_repl_history

# npm
export NPM_CONFIG_USERCONFIG=$XDG_CONFIG_HOME/npm/npmrc

# python
export PYTHON_EGG_CACHE="$XDG_CACHE_HOME"/python-eggs
export PYLINTHOME="$XDG_CACHE_HOME"/pylint

# readline
export INPUTRC="$XDG_CONFIG_HOME"/readline/inputrc

# ruby gem
export GEM_HOME="$XDG_DATA_HOME"/gem
export GEM_SPEC_CACHE="$XDG_CACHE_HOME"/gem
export PATH="$PATH":"$XDG_CACHE_HOME"/gem/bin

# rust
export RUSTUP_HOME="$XDG_DATA_HOME"/rustup

# Spacemacs
export SPACEMACSDIR="$XDG_CONFIG_HOME"/spacemacs

# Taskwarior
export TASKDATA="$XDG_DATA_HOME"/task
export TASKRC="$XDG_CONFIG_HOME"/task/taskrc

# urxvtd
export RXVT_SOCKET="$XDG_RUNTIME_DIR"/urxvtd

# vagrant
export VAGRANT_HOME="$XDG_DATA_HOME"/vagrant
export VAGRANT_ALIAS_FILE="$XDG_DATA_HOME"/vagrant/aliases

# wget
export WGETRC="$XDG_CONFIG_HOME/wgetrc"

# wine
export WINEPREFIX="$XDG_DATA_HOME"/wineprefixes/default

# libx11
export XCOMPOSEFILE="$XDG_CONFIG_HOME"/X11/xcompose
export XCOMPOSECACHE="$XDG_CACHE_HOME"/X11/xcompose

# xauthority
export XAUTHORITY="$XDG_RUNTIME_DIR"/xauthority

# xbindkeys
# TODO

# xinit
export XINITRC="$XDG_CONFIG_HOME"/X11/xinitrc
export XSERVERRC="$XDG_CONFIG_HOME"/X11/xserverrc

# x11 libice
export ICEAUTHORITY="$XDG_CACHE_HOME"/ICEauthority

